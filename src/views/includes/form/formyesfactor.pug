mixin modalyf(href)
    .modalYF#modalYF
        .modal__ventanaYF
            .cerrar
                a(href=href)#cerrar
                    i.fa.fa-times
                    
            hr 
            .title__form
                h2 inscripciones the yes factor
                hr 

            .modal__container
                .modal__form
                    form
                        .div__info__container
                            .div__info__items
                                i.lnr.lnr-user
                                input(type="text" placeholder="Juan Lizcano" autofocus)#nombres
                            
                            .div__info__items
                                i.lnr.lnr-envelope
                                input(type="text" placeholder="Juan@Example.com")#email

                            .div__info__items
                                i.lnr.lnr-phone-handset
                                input(type="text" placeholder="(300)455 5555" maxlength="10")#telefono

                            .div__info__items
                                i.lnr.lnr-calendar-full
                                input(type="date" )#fechanacimiento

                            .div__info__items
                                i.lnr.lnr-earth
                                input(type="text" placeholder="neiva")#ciudad


                            .div__info__items.div__info__items__textarea
                                i.lnr.lnr-bubble
                                textarea(name="", cols="30", rows="10" placeholder="Your message...")#mensaje
                        
                        .div__info__send
                            button#buttonSendYF 
                                i.fa.fa-paper-plane